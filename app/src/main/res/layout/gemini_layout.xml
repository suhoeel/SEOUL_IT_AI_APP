<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="64dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false">

    <!-- Gemini 프로필 아이콘 -->
    <ImageView
        android:id="@+id/gemini_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_gemini_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_view_bubble"
        android:contentDescription="Gemini Icon" />

    <!-- 말풍선 형태의 카드뷰 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_bubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="#F0F4F9"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/gemini_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- Gemini 응답 텍스트 (TypeWriter) -->
            <com.portfolio.school.customview.TypeWriter
                android:id="@+id/tv_gemini_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gemini response will appear here..."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4sp"
                android:textIsSelectable="true" />

            <ImageView
                android:id="@+id/ai_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_launcher_background" />

            <!-- 이미지 저장 버튼 (필요시 표시) -->
            <Button
                android:id="@+id/save_image_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Save Image"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
